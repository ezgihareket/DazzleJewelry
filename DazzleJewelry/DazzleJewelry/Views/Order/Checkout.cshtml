@model Order

<form asp-action="Checkout" method="Post" class="form-horizontal" role="form" style="text-align-last:center;">
    <h4>Harika mücevherler sipariş etmekten bir adım uzaktasınız</h4>

    <div asp-validation-summary="All" class="danger" style="color:red; font-family:ui-serif;"></div>


    <div class="form-group">
        <div><label asp-for="FirstName" class="col-md-5 control-label" style="margin-left:151px; font-family:ui-serif; color:slategray;"></label></div>
        <br />
        <div class="col-md-5" style="float:none;">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="danger" style="color:red; font-family:ui-serif;"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="LastName" class="col-md-5 control-label" style="margin-left: 150px; font-family: ui-serif; color: slategray;"></label>
        <div class="col-md-5" style="float:none;">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="danger" style="color:red; font-family:ui-serif;"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="col-md-5 control-label" style="margin-left: 142px; font-family: ui-serif; color: slategray;"></label>
        <div class="col-md-5" style="float:none;">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="danger" style="color:red; font-family:ui-serif;"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="City" class="col-md-5 control-label" style="margin-left: 130px; font-family: ui-serif; color: slategray;"></label>
        <div class="col-md-5" style="float:none;">
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="danger" style="color:red; font-family:ui-serif;"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="State" class="col-md-5 control-label" style="margin-left: 131px; font-family: ui-serif; color: slategray;"></label>
        <div class="col-md-5" style="float:none;">
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="danger" style="color:red; font-family:ui-serif;"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="ZipCode" class="col-md-5 control-label" style="margin-left: 145px; font-family: ui-serif; color: slategray;"></label>
        <div class="col-md-5" style="float:none;">
            <input asp-for="ZipCode" class="form-control" />
            <span asp-validation-for="ZipCode" class="danger" style="color:red; font-family:ui-serif;"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-5 control-label" style="margin-left: 165px; font-family: ui-serif; color: slategray;"></label>
        <div class="col-md-5" style="float:none;">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="danger" style="color:red; font-family:ui-serif;"></span>
        </div>
    </div>





    <div class="basketCompleteContent">
        <div class="col-md-offset-3 col-md-6">
            <input type="submit" class="button basketCompletebtn" value="Siparişi Tamamla" style="border-radius: 3px;" />
        </div>
    </div>

</form>